# Unity .gitattributes
# Ensures consistent line endings and correct diff/merge behavior across Windows and Mac

# ---------------------------------------------------------------
# Default: normalize all text files to LF in the repo
# ---------------------------------------------------------------
* text=auto

# ---------------------------------------------------------------
# C# source and Unity text assets — LF in repo, auto-convert on checkout
# ---------------------------------------------------------------
*.cs        text eol=lf
*.shader    text eol=lf
*.cginc     text eol=lf
*.hlsl      text eol=lf
*.glsl      text eol=lf
*.compute   text eol=lf
*.json      text eol=lf
*.asmdef    text eol=lf
*.asmref    text eol=lf
*.md        text eol=lf
*.txt       text eol=lf
*.xml       text eol=lf
*.html      text eol=lf
*.css       text eol=lf

# ---------------------------------------------------------------
# Unity YAML files — must use Unity's merge driver to avoid conflicts
# ---------------------------------------------------------------
*.unity     merge=unityyamlmerge eol=lf
*.prefab    merge=unityyamlmerge eol=lf
*.asset     merge=unityyamlmerge eol=lf
*.mat       merge=unityyamlmerge eol=lf
*.anim      merge=unityyamlmerge eol=lf
*.controller merge=unityyamlmerge eol=lf
*.overrideController merge=unityyamlmerge eol=lf
*.physicsMaterial2D merge=unityyamlmerge eol=lf
*.playable  merge=unityyamlmerge eol=lf
*.renderTexture merge=unityyamlmerge eol=lf
*.spriteatlas merge=unityyamlmerge eol=lf
*.guiskin   merge=unityyamlmerge eol=lf
*.fontsettings merge=unityyamlmerge eol=lf

# ---------------------------------------------------------------
# Binary files — never diff or convert line endings
# ---------------------------------------------------------------
*.png       binary
*.jpg       binary
*.jpeg      binary
*.gif       binary
*.psd       binary
*.tga       binary
*.tiff      binary
*.bmp       binary
*.webp      binary

*.mp3       binary
*.wav       binary
*.ogg       binary
*.aif       binary
*.aiff      binary

*.fbx       binary
*.obj       binary
*.blend     binary
*.dae       binary

*.dll       binary
*.so        binary
*.a         binary
*.lib       binary

*.apk       binary
*.aab       binary
*.ipa       binary
*.exe       binary

*.zip       binary
*.7z        binary
*.gz        binary
*.tar       binary
